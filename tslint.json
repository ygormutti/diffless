{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "interface-name": [
            true,
            "never-prefix"
        ],
        "max-classes-per-file": false,
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "array-type": [
            true,
            "array"
        ],
        "member-ordering": false,
        "member-access": [
            true,
            "no-public"
        ],
        "curly": [
            true,
            "ignore-same-line"
        ],
        "max-line-length": [
            true,
            110
        ]
    }
}